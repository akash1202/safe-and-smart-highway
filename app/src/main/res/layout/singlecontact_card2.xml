<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fcard2"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="10" >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fimage2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
        card_view:civ_border_color="@color/colorWhatsapp"
        card_view:civ_border_width="3dp"
        android:layout_weight="8"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingRight="3dp"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/fname2"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="fname lname 12345"
            android:layout_weight="0.8"
            />
        <ImageButton
            android:id="@+id/foptions2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="@color/colorWhatsapp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_more_dot_vert_black_24dp"
            android:layout_weight="9.2"
            />
        <Spinner
            android:id="@+id/fSpinner2"
            android:elevation="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <TextView
            android:id="@+id/fnumber2"
            android:visibility="gone"
            android:textColor="@color/colorWhatsapp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+918690830151"
            android:layout_weight="6"
            />
    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>