<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.akash.myhighway1.MyVehicle">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhatsapp"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
</android.support.design.widget.AppBarLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="@color/colorWhatsapp"
    android:text="User Id : 140420107001" />

<android.support.v7.widget.CardView
    android:id="@+id/vehiclecard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitecolor"
    android:layout_margin="25dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/vehicleimagecard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/vehicle"
            android:scaleType="centerCrop"
            app:civ_border_overlay="false"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/colorWhatsapp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="10dp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Vehicle"
                android:textColor="@color/colorWhatsapp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/colorWhatsapp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="6"
                android:gravity="center"
                android:text="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Rc no"
                android:textColor="@color/colorWhatsapp" />
            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/colorWhatsapp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="6"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="125456GUJ05" />
        </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>
